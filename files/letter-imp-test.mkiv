\defineletterelement[\v!head     ][\v!test]{\v!head     }
\defineletterelement[\v!nexthead ][\v!test]{\v!nexthead }
\defineletterelement[\v!lefthead ][\v!test]{\v!lefthead }
\defineletterelement[\v!righthead][\v!test]{\v!righthead}

\setupletterlayer
  [\v!head,\v!nexthead,\v!lefthead,\v!righthead]
  [\c!alternative=\v!test]

\definecolor[\v!letter:\v!head     ][r=1.0,g=1.0,b=0.0,t=0.5,a=1]
\definecolor[\v!letter:\v!nexthead ][r=0.0,g=1.0,b=1.0,t=0.5,a=1]
\definecolor[\v!letter:\v!lefthead ][r=1.0,g=0.0,b=1.0,t=0.5,a=1]
\definecolor[\v!letter:\v!righthead][r=0.0,g=1.0,b=0.0,t=0.5,a=1]

\setupletterframe
  [\v!head,\v!nexthead,\v!lefthead,\v!righthead]
  [\c!foregroundstyle=\WORD\tt,
   \c!foregroundcolor=\currentcorrespondenceframe,
   \c!framecolor=\currentcorrespondenceframe,
   \c!offset=1ex,
   \c!frame=\v!on]

\endinput
